---
export interface Props {
  img: string;
  text: string;
  desc: string;
}
const { img, text, desc } = Astro.props;
---

<div
  class="p-4 cursor-pointer hover:bg-orange-400 sm:p-5 rounded-xl h-[20rem] bg-body border border-box-border group z-40"
>
  <img
    src={img}
    width="100"
    height="60"
    alt="spotify"
    class="w-auto mx-auto h-[60%] ease-linear duration-300 group-hover:scale-105"
  />

  <h2
    class="font-bold text-heading-1 dark:text-white text-[#222222] group-hover:text-white flex justify-center mt-3"
  >
    {text}
  </h2>
  <p
    class="dark:text-white text-[#555555] text-center mt-2 group-hover:text-white"
  >
    {desc}
  </p>
</div>
